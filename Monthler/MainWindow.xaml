<Window x:Class="Monthler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monthler"
        mc:Ignorable="d"
        Title="Monthler" Height="584" Width="399" WindowStartupLocation="CenterScreen" Icon="/icon-monthler.png" MinHeight="210" MinWidth="200">
    <Grid Name="layoutGrid" Background="LightSteelBlue">
        <!--#region column defs -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#endregion-->


        <!--#region Header buttons -->
        <Button x:Name="BtnPinWindow" Content="Pin Window" ToolTip="Pinning the windows make this window always above other windows." Grid.Row="0" Click="BtnPinWindow_Click"/>
        <!--#endregion-->

        <!--#region Calendars -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <WrapPanel x:Name="WpCalendars">
            </WrapPanel>
        </ScrollViewer>
        <!--#endregion-->
    </Grid>
</Window>
