<Window x:Class="Monthler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monthler"
        mc:Ignorable="d"
        Title="Monthler" Height="584" Width="384" WindowStartupLocation="CenterScreen" Icon="/icon-monthler.png" MinHeight="210" MinWidth="200">
    <Grid Name="layoutGrid" Background="LightSteelBlue">
        <!--#region column defs -->
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        
        <!--#region Header buttons -->
        <Button x:Name="BtnPinWindow" Content="Pin Window" ToolTip="Pinning the windows make this window always above other windows." Grid.Row="0"/>
        <!--#endregion-->
        
        <!--#region Calendars -->
        <WrapPanel Grid.Row="1">
            <Calendar Margin="2" Padding="0"/>
            <Calendar Margin="2" Padding="0"/>
            <Calendar Margin="2" Padding="0"/>
            <Calendar Margin="2" Padding="0"/>
            <Calendar Margin="2" Padding="0"/>
            <Calendar Margin="2" Padding="0"/>
        </WrapPanel>
        <!--#endregion-->
    </Grid>
</Window>
